---
import Link from "components/link.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

type Props = {
    title: string;
    intro: string;
    comment?: string;
    values?: string;
    otherInfo?: string;
};

 const { title = "PLACE_HOLDER", intro = "Lorem ipsum dolor sit amet", comment, values, otherInfo } = Astro.props;
---

<!-- This is a template page to later auto-populate with codebook values. See example at https://bluebutton.cms.gov/resources/variables/line_prcsg_ind_cd/ -->

<BaseLayout
	title={title}
	description=""
	showSideNav={false}
	showInPageNav={false}
>
	<h1 class="margin-top-6">Variable: {title}</h1>
        <p class="usa-intro font-ui-md">{intro}</p>
        <h2>Description</h2>
        <slot name="description" />
            <!-- Comments not always present -->
            {comment ?
                <h3>Comment</h3>
                <p>{comment}</p>
                : null
            }
            <!-- Values not always present. The p below always appears if present -->
            {values ? 
                <h2>Values</h2>
                <p>This variable is coded, and will contain one of the following values.</p>
                <slot name="values" />
                : null 
            }
            <!-- Other info not always present. The p below always appears if present -->
            {otherInfo ?
                <h2>Other info</h2>
                <p>Some additional information on this variable:</p>
                <slot name="info" />
                : null 
            }
</BaseLayout>
