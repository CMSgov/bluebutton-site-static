---
import type { MarkdownHeading } from 'astro'
import SideNav from '#components/side-nav.astro'
import TableOfContents from '#components/toc.astro'

type Props = {
  showSideNav?: boolean
  headings?: MarkdownHeading[]
}

const { showSideNav = true, headings = [] } = Astro.props
---

<div class="grid-container padding-y-8">
  <div class="grid-row">
    {showSideNav && <SideNav />}
    <main id="main-content" class="main-content position-relative grid-col-fill">
      <slot />
    </main>
    {headings && headings.length > 0 ? <TableOfContents headings={headings} /> : null}
  </div>
</div>
